<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br>
      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Mot de passe oublié ?</h1>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, "Votre email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "Recevoir un mail de réinitialisation", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <br>
    </div>

    <div class="col-md-6 offset-md-3 text-center">
      <%= render "devise/shared/links" %>
      <br><br>
    </div>
  </div>
</div>
