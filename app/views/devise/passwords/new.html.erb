<div class="container devise-page">
  <div class="row">
    <div class="col-md-8 col-lg-6 mx-auto">
      <br><br>
      <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin mt-3" } do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <h3 class="mb-3 font-weight-normal text-center text-indigo">Mot de passe oublié ?</h3>

        <div class="form-group">
          <%= f.label :email, "Votre email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group mt-5">
          <%= f.submit "Recevoir un email de réinitialisation", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <br>
    </div>

    <div class="col-md-6 offset-md-3 text-center">
      <%= render "devise/shared/links" %>
      <br><br>
    </div>
  </div>
</div>
