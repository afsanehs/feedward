<div class="container devise-page">
    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">
            <br><br>
            <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin mt-3" } do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <h3 class="mb-3 font-weight-normal text-center text-indigo">Je r√©initialise mon mot de passe</h3>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
                <%= f.label :password, "Votre nouveau mot de passe" %><br />
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation, "Confirmation de votre mot de passe" %><br />
                <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group mt-5">
                <%= f.submit "Changer mon mot de passe", class: "btn btn-lg btn-primary btn-block" %>
            </div>
            <% end %>
            <br>
        </div>

        <div class="col-md-6 offset-md-3 text-center">
            <%= render "devise/shared/links" %>
            <br><br>
        </div>
    </div>
</div>