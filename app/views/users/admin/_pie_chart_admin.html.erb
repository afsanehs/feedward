<div class="col-12">
  <div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-indigo text-uppercase">Répartition des notes de l'entreprise</h6>
    </div>
    <!-- Card Body -->
    <div class="card-body">
      <div class="row">
          <div class="chart-pie pt-4 pb-2 col-6">
            <%= pie_chart @all_grades, colors: @colors, library: {legend: {position: "left"}}, download: true %>
          </div>
          <div class="d-flex flex-column col-6">
              <div class="chart-pie mt-2 ml-5" >
                <div class="d-flex flex-row">
                  <%= pie_chart @all_grades_yesterday, colors: @colors,  legend: false , donut: true,  height: "150px", width: "150px", download: true, library: {cutoutPercentage: 70}%>
                  <small><div class = "card mx-auto ml-5">
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item text-uppercase"> Comparaison avec hier</li>
                    </ul>
                  </div></small>
                </div>
              </div>
              <div class="chart-pie mt-2 ml-5">
                <div class="d-flex flex-row ">
                <%= pie_chart @all_grades_last_week, colors: @colors, legend: false, donut: true,  height: "150px", width: "150px", download: true , library: {cutoutPercentage: 70}%>
                
                <small><div class = "card mx-auto ml-5">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item text-uppercase"> Comparaison avec la semaine dernière</li>
                  </ul>
                </div></small>
                
              </div>

          </div>
      </div>
     
    </div>
  </div>
</div>
