<!-- Navbar -->
<div class="navbar-section">
  <nav class="navbar navbar-expand-lg navbar-dark bg-secondary fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand mr-5 nav-text-bold" href="<%= root_path %>">Feedward</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="true" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="navbar-collapse collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item mr-4">
            <% unless user_signed_in? %>
            <a class="nav-link text-white" href="/#readmore">En savoir plus</a>
            <% end %>
          </li>
          <li class="nav-item mr-4">
            <% unless user_signed_in? %>
            <a class="nav-link text-white" href="/#howitwork">Comment ça marche?</a>
            <% end %>
          </li>
          <li class="nav-item mr-4 ">
            <% unless user_signed_in? %>
            <a class="nav-link text-white" href="/#demo">Demandez une démo</a>
            <% end %>
          </li>
        </ul>

        <% if user_signed_in? %>
            <% if current_user.is_company_admin || current_user.is_site_admin %>
              <ul class="navbar-nav--cus navbar-right">
                      <a class="nav-link--cus dropdown-toggle--cus"  data-toggle="notification-menu">
                          <i class="fas fa-bell"></i>
                          <% @count_noti= count_notifications_unread %>
                          <% if  @count_noti >= 9%>
                            <span class="navbar-badge">9+</span>
                          <% else %>
                            <span class="navbar-badge"><%=  @count_noti %></span>
                          <% end %>
                      </a>
                      
                  <%= render :partial => 'notifications/notification_menu'%>


              </ul>   
            <%end%>

              
            <ul class="navbar-nav">
              <% if current_user.is_company_admin || current_user.is_site_admin %>
               <li class="nav-item <%= active_class(dashboard_admin_path) %>">
                <a class="nav-link nav-text-bold" href="<%= dashboard_admin_path %>">Dashboard Manager</a>
              </li>

              <% elsif current_user.is_validated %>
                <li class="nav-item <%= active_class(dashboard_path) %>">
                   <a class="nav-link nav-text-bold" href="<%= dashboard_path %>">Dashboard</a>
                </li>
              <% end %>

              <li class="nav-item <%= active_class(profile_path) %>">
                <a class="nav-link nav-text-bold" href="<%= profile_path %>">Mes infos</a>
              </li>

          <li class="nav-item">
            <a class="nav-link nav-text-bold" href="<%=destroy_user_session_path%>">Se déconnecter</a>
          </li>

          <li>
            <% if cookies[:moon] %>
              <button id="darkmode-button" class="btn btn-primary"><%= link_to 'Light Mode', sun_path, method: :get%></button>
            <% else %>
              <button id="darkmode-button" class="btn btn-primary"><%= link_to 'Dark Mode', moon_path, method: :get%></button>
            <% end %>
          </li>
        </ul>
        <% else %>
        <ul class="navbar-nav ml-auto nav-account">
          <li class="nav-item nav-item--separate">
            <a class="nav-link nav-text-bold" href="<%=new_user_session_path%>">Se connecter</a>
          </li>
          <li class="nav-item">
            <a class="nav-link nav-text-bold" href="<%=new_user_registration_path%>">S'inscrire</a>
          </li>

          <li>
            <% if cookies[:moon] %>
              <button id="darkmode-button" class="btn btn-primary"><%= link_to 'Light Mode', sun_path, method: :get%></button>
            <% else %>
              <button id="darkmode-button" class="btn btn-primary"><%= link_to 'Dark Mode', moon_path, method: :get%></button>
            <% end %>
          </li>
        </ul>

        <% end %>

      </div>
    </div>
  </nav>
</div>
