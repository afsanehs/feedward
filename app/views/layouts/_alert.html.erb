<section id="alert-section">
  <div class="container">
        <% flash.each do |key, value| %>
        <div class="alert-dismissible text-center <%= flash_class(key) %>">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= value unless value.blank? %>
        </div>
        <% end %>
  </div>
</section>